{
    // Window
    "window.zoomLevel": -1,
    "window.restoreWindows": "all",
    // Explorer
    "explorer.confirmDragAndDrop": false,
    // Files
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    // Workbench
    "workbench.colorTheme": "Material Theme Darker",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.fontAliasing": "auto",
    "workbench.editor.showIcons": true,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,
    "workbench.colorCustomizations": {
        "activityBarBadge.background": "#00BCD4",
        "list.activeSelectionForeground": "#00BCD4",
        "list.inactiveSelectionForeground": "#00BCD4",
        "list.highlightForeground": "#00BCD4",
        "scrollbarSlider.activeBackground": "#00BCD450",
        "editorSuggestWidget.highlightForeground": "#00BCD4",
        "textLink.foreground": "#00BCD4",
        "progressBar.background": "#00BCD4",
        "pickerGroup.foreground": "#00BCD4",
        "tab.activeBorder": "#00BCD4"
    },
    // Editor
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "editor.renderLineHighlight": "all",
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "selection",
    "editor.selectionHighlight": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.wordWrap": "off",
    "editor.fontFamily": "'Fira Code', Monaco",
    "editor.fontWeight": "500",
    "editor.fontLigatures": true,
    "editor.colorDecorators": false,
    "editor.fontSize": 14,
    "editor.maxTokenizationLineLength": 40000,
    "editor.rulers": [
        80,
        120
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    },
    "color-highlight.markRuler": false,
    // Terminal
    "terminal.integrated.fontFamily": "'Fira Code', Monaco",
    "terminal.integrated.fontLigatures": true,
    "terminal.integrated.fontWeight": "500",
    "terminal.integrated.fontSize": 14,
    // Touchbar
    "nasc-touchbar.goToDefinition": false,
    "nasc-touchbar.jumpToBracket": true,
    "nasc-touchbar.toggleWhiteSpace": true,
    "nasc-touchbar.blockComment": true,
    "nasc-touchbar.showCommands": false,
    "nasc-touchbar.togglePanel": false,
    "nasc-touchbar.addCursorBelow": false,
    "nasc-touchbar.goToNext": true,
    // Python
    "python.autoComplete.addBrackets": true,
    "python.formatting.provider": "autopep8",
    "python.linting.pylintArgs": [
        "--disable=E1101, C0103, C0301, C0302, C0414, W0603, R1705, W0105"
    ],
    // HTML
    "html.format.unformatted": "wbr, a, em, i, b, strong, span, code, sup, sub",
    // ESLint
    "eslint.alwaysShowStatus": true,
    "eslint.format.enable": true,
    "eslint.run": "onSave",
    "problems.showCurrentInStatus": true,
    "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    // Emmet
    "emmet.triggerExpansionOnTab": true,
    // ToDo
    "todo-tree.tree.showScanModeButton": false,
    // Formatting
    "[javascript]": {
        "editor.formatOnSave": false
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false
    },
    "[typescript]": {
        "editor.formatOnSave": false
    },
    "[typescriptreact]": {
        "editor.formatOnSave": false
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "prettier.disableLanguages": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    // Spellchecking
    "cSpell.userWords": [
        "Ahoj",
        "DÄ…browski",
        "Mateusz",
        "Middlewares",
        "browserslist",
        "eloqua",
        "favicon",
        "heroku",
        "optin",
        "shortcut"
    ],
    "cSpell.language": "en-GB",
    // LiveServer
    "liveServer.settings.donotShowInfoMsg": true,
}